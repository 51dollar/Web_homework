@model Friend

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit the friends list</h2>
		</div>
		<input type="hidden" asp-for="FriendID" />
		<div class="mb-3">
			<label asp-for="FriendName">Name Friend</label>
			<input asp-for="FriendName" class="form-control" />
			<span asp-validation-for="FriendName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Place"></label>
			<input asp-for="Place" class="form-control" />
			<span asp-validation-for="Place" class="text-danger"></span>
		</div>
		<button type="submit" value="Save" class="btn btn-primary" style="width:150px">Update</button>
		<a asp-controller="Friend" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to list
		</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}