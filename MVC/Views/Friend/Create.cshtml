@model Friend

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Add a friend</h2>
		</div>
		<div class="mb-3">
			<label asp-for="FriendName">Name Friend</label>
			<input asp-for="FriendName" class="form-control" />
			<span asp-validation-for="FriendName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Place"></label>
			<input asp-for="Place" class="form-control" />
			<span asp-validation-for="Place" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Add</button>
		<a asp-controller="Friend" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to list
		</a>
	</div>
</form>